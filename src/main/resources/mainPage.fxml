<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cards.shvedko.Controller.MainPageController">
    <children>
        <GridPane alignment="CENTER" layoutY="-3.0" prefHeight="400.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" prefHeight="85.0" prefWidth="194.0" text="ADD NEW WORD"
                        GridPane.halignment="CENTER" GridPane.valignment="CENTER" onAction="#handleAddWordButton"
                        fx:id="addWord">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button layoutX="213.0" layoutY="35.0" mnemonicParsing="false" prefHeight="85.0" prefWidth="194.0"
                        text="SEE ALL WORDS" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                        GridPane.valignment="CENTER" onAction="#handleSeeAllWordsButton" fx:id="seeAllWords">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button layoutX="10.0" layoutY="168.0" mnemonicParsing="false" prefHeight="85.0" prefWidth="194.0"
                        text="EXIT" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"
                        onAction="#handleCloseButton" fx:id="close">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
    </children>
</AnchorPane>
